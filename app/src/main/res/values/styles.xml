<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopUp" parent="Theme.AppCompat">
        <item name="android:background">@color/lightGrey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Action_Bar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name = "Preference_theme" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>0
    </style>

</resources>
