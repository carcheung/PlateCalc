<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/AppTheme"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:src="@drawable/add_hdpi" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/remove_hdpi"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/add"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:id="@+id/weight"
        android:layout_alignBottom="@+id/add"
        android:layout_alignTop="@+id/add"
        android:layout_toEndOf="@+id/sub"
        android:autoText="false"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lbs"
        android:id="@+id/unit"
        android:autoText="false"
        android:textColor="@color/white"
        android:gravity="left|center_vertical|center_horizontal"
        android:layout_alignTop="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/multiply"
        android:layout_toEndOf="@+id/weight"
        android:layout_alignBaseline="@+id/weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/multiply"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/add"
        android:layout_alignTop="@+id/add"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/amt"
        android:layout_toStartOf="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_alignTop="@+id/add"
        android:gravity="center_vertical"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_alignStart="@+id/multiply" />

</RelativeLayout>